<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500.0" prefWidth="1000.0" style="-fx-background-color: #F5F7FA;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gui_v1.Patient.PatientEventHandlers">

    <!-- Sidebar -->
    <left>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #FFFFFF; -fx-padding: 20; -fx-pref-width: 220;">
            <!-- User Profile -->
            <VBox alignment="CENTER" spacing="10">
                <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                    <image>
                        <Image url="@../../../../img/patient.png" />
                    </image>
                </ImageView>
                <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333333;" text="John Doe" />
            </VBox>

            <!-- Navigation -->
            <VBox alignment="CENTER_LEFT" spacing="10">
            <Button layoutX="10.0" layoutY="46.0" style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-pref-width: 200;" text="My Dashboard" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-pref-width: 200;" text="My Appointments" />
                <Button style="-fx-background-color: EAF3FF; -fx-text-fill: #3076F1; -fx-pref-width: 200;" text="My Prescriptions" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-pref-width: 200;" text="My Bills" />

                <!-- Tools Section -->
                <Separator />
                <Button style="-fx-background-color: transparent; -fx-text-fill: #FF6B5C; -fx-pref-width: 200;" text="Log Out" />
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <VBox alignment="TOP_LEFT" prefHeight="458.0" prefWidth="490.0" spacing="20" style="-fx-padding: 20;">
            <!-- Appointments Header -->
            <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333333;" text="PRESCRIPTIONS" />

            <!-- Search Bar -->
            <HBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                <TextField promptText="Search Prescriptions" style="-fx-background-radius: 5; -fx-border-color: #E0E0E0;" HBox.hgrow="ALWAYS" />
                <Button style="-fx-background-color: #3076F1; -fx-text-fill: #FFFFFF; -fx-background-radius: 5;" text="SEARCH" />
            </HBox>

            <!-- Appointments List -->
            <VBox alignment="CENTER" prefWidth="450.0" spacing="10">
                <!-- Appointment Card 1 -->
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-padding: 15; -fx-pref-width: 100%;">
                    <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                        <image>
                            <Image url="@../../../../img/doctor.png" />
                        </image>
                    </ImageView>
                    <VBox minHeight="75.0" minWidth="267.0" prefHeight="75.0" prefWidth="267.0" spacing="5" style="-fx-pref-width: 70%;" HBox.hgrow="ALWAYS">
                        <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Joao Felix" />
                        <Label style="-fx-font-size: 14; -fx-text-fill: #555555;" text="02 April 2021 | 11:30 AM - 12:00 PM" />
                        <Label style="-fx-font-size: 14; -fx-text-fill: #555555;" text="Paracetamol" />
                    </VBox>
                </HBox>
                <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" spacing="10" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-padding: 15; -fx-pref-width: 100%;">
                    <children>
                        <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                            <image>
                                <Image url="@../../../../img/doctor.png" />
                            </image>
                        </ImageView>
                        <VBox minHeight="75.0" minWidth="267.0" prefHeight="75.0" prefWidth="267.0" spacing="5" style="-fx-pref-width: 70%;" HBox.hgrow="ALWAYS">
                            <children>
                                <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Joao Felix" />
                                <Label style="-fx-font-size: 14; -fx-text-fill: #555555;" text="02 April 2021 | 11:30 AM - 12:00 PM" />
                                <Label style="-fx-font-size: 14; -fx-text-fill: #555555;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </VBox>
        </VBox>
    </center>

</BorderPane>
